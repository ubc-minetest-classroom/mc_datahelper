<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:MC_DataHelper.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MC_DataHelper.Views.UserControls.ItemsFormUserControl">

    <UserControl.DataContext>
        <vm:ItemsFormViewModel />
    </UserControl.DataContext>

    <ScrollViewer AllowAutoHide="True">
        <StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Command="{Binding SubmitFormCommand }" Margin="8">
                    Add Item
                </Button>
                <Button Command="{Binding ClearFormCommand }" Margin="8">New Item</Button>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>


</UserControl>